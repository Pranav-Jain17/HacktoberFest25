<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clipboard with Toast Feedback</title>
    <!-- 1. Include Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Ensures the Inter font is used */
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen bg-gray-100 font-sans">

    <div class="w-full max-w-md p-8 bg-white rounded-xl shadow-lg">
        
        <h1 class="text-2xl font-bold text-gray-800 mb-4">ATS Score Report</h1>
        
        <!-- The content to be copied -->
        <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg mb-6">
            <p id="text-to-copy" class="text-gray-700">Your ATS Score: 88/100. Keywords matched: 12/15.</p>
        </div>
        
        <!-- The Copy Button -->
        <button
          id="copy-button"
          class="w-full flex items-center justify-center py-3 px-4 rounded-lg font-semibold text-white transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 bg-blue-600 hover:bg-blue-700 focus:ring-blue-500"
        >
          <!-- Icon container (will be changed by JS) -->
          <span id="button-icon-container">
            <!-- Clipboard Icon SVG -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5 mr-2"
            >
              <rect width="8" height="4" x="8" y="2" rx="1" ry="1"></rect>
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
            </svg>
          </span>
          <!-- Text span (will be changed by JS) -->
          <span id="button-text">Copy Score</span>
        </button>
    </div>

    <!-- The Toast Notification
         Starts hidden with opacity-0 and translated down.
    -->
    <div
      id="toast-notification"
      class="fixed bottom-5 right-5 z-50 transition-all duration-300 ease-in-out opacity-0 translate-y-5 pointer-events-none"
      role="alert"
      aria-live="assertive"
    >
      <div class="flex items-center bg-gray-900 text-white py-3 px-5 rounded-lg shadow-xl">
        <!-- Checkmark Icon SVG -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-5 h-5 mr-2 text-green-400"
        >
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>Copied to clipboard!</span>
      </div>
    </div>


    <!-- 2. Our Custom JavaScript -->
    <script>
        // Store the SVG icons as strings
        const clipboardIcon = `
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-5 h-5 mr-2"
          >
            <rect width="8" height="4" x="8" y="2" rx="1" ry="1"></rect>
            <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
          </svg>`;

        const checkIcon = `
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-5 h-5 mr-2"
          >
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>`;

        // Get DOM elements
        const copyButton = document.getElementById('copy-button');
        const buttonText = document.getElementById('button-text');
        const buttonIcon = document.getElementById('button-icon-container');
        const textToCopy = document.getElementById('text-to-copy').innerText;
        const toast = document.getElementById('toast-notification');

        let isCopied = false;
        const timeoutDuration = 2000; // 2 seconds

        /**
         * Copies text to the clipboard using the document.execCommand.
         * This method is used for compatibility in sandboxed iFrames.
         */
        function copyToClipboard(text) {
            try {
                // Create a temporary textarea element
                const el = document.createElement('textarea');
                el.value = text;
                
                // Make it invisible and append it to the body
                el.style.position = 'fixed';
                el.style.top = '-9999px';
                el.style.left = '-9999px';
                document.body.appendChild(el);
                
                // Select the text and execute the copy command
                el.select();
                document.execCommand('copy');
                
                // Remove the temporary element
                document.body.removeChild(el);

                return true; // Indicate success
            } catch (error) {
                console.error("Failed to copy text: ", error);
                return false; // Indicate failure
            }
        }

        // Add click event listener to the button
        copyButton.addEventListener('click', () => {
            // Prevent multiple clicks while animation is running
            if (isCopied) return;

            // Attempt to copy
            const success = copyToClipboard(textToCopy);

            if (success) {
                // --- 1. Trigger Visual Feedback ---
                isCopied = true;
                
                // Disable button and change style
                copyButton.disabled = true;
                copyButton.classList.remove('bg-blue-600', 'hover:bg-blue-700', 'focus:ring-blue-500');
                copyButton.classList.add('bg-green-600');
                
                // Change icon and text
                buttonIcon.innerHTML = checkIcon;
                buttonText.innerText = 'Copied!';

                // Show the toast
                toast.classList.remove('opacity-0', 'translate-y-5');
                toast.classList.add('opacity-100', 'translate-y-0');

                // --- 2. Reset after 2 seconds ---
                setTimeout(() => {
                    // Reset button style
                    copyButton.disabled = false;
                    copyButton.classList.add('bg-blue-600', 'hover:bg-blue-700', 'focus:ring-blue-500');
                    copyButton.classList.remove('bg-green-600');
                    
                    // Reset icon and text
                    buttonIcon.innerHTML = clipboardIcon;
                    buttonText.innerText = 'Copy Score';
                    
                    // Hide the toast
                    toast.classList.add('opacity-0', 'translate-y-5');
                    toast.classList.remove('opacity-100', 'translate-y-0');

                    isCopied = false;
                }, timeoutDuration);
            }
        });

    </script>
</body>
</html>
